{
  "version": "0.1.0",
  "tasks": {
    "test": "deno test -E -N",
    "fmt": "deno fmt --ignore=\"coverage,demo\"",
    "lint": "deno lint src tests",
    "run-docker": "docker run -p 7700:7700 --rm getmeili/meilisearch:latest meilisearch --master-key=masterKey --no-analytics",
    "doc-lint": "",
    "setup:meili": "deno --allow-net --allow-env scripts/setup_meilisearch.ts"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/testing": "jsr:@std/testing@^1.0.3",
    "meilisearch": "npm:meilisearch@^0.44.1"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  }
}
